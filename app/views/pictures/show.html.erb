<p><%= @picture.content %></p>

<% unless @picture.user == current_user %>
 <% if @favorite.present? %>
   <%= link_to 'お気に入り解除する', favorite_path(@picture.id), method: :delete %>
 <% else %>
   <%= link_to 'お気に入りする', favorites_path(picture_id: @picture.id),  method: :post %>
    
 <% end %>
<% end %>
